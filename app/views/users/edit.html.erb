<div class="container">
  <div class="back-button-div my-4">
    <%= link_to "Back", user_path(current_user), class: "general-btn" %>
  </div>
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h4 class="text-center my-3">Update your personal information</h4>
      <%= form_with model: @user do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(missing_item.errors.count, "error") %> prohibited this missing_item from being saved:</h2>

          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= form.label :email %><br/>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= form.label :full_name %><br/>
        <%= form.text_field :full_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :phone %><br/>
        <%= form.text_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :region %><br/>
        <%= form.text_field :region, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :city %><br/>
        <%= form.text_field :city, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :avatar %><br/>
        <%= form.file_field :avatar %>
      </div>
      <br>
      <%= form.submit "Save Changes", class: "general-btn" %>
    <% end %>
    </div>
  </div>
</div>
